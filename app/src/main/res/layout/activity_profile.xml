<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/settings_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_gradient"
                android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/ic_account"
        android:layout_marginTop="23dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/profile_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Name"
        android:textColor="#ffffff"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_below="@+id/profile_image"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/profile_friends_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/profile_send_rq_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Total Friends"
        android:textColor="#ffffff"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/profile_send_rq_button"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@drawable/button_frame"
        android:text="SEND FRIEND REQUEST"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/profile_decline_button"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/profile_decline_button"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/button_frame"
        android:text="DECLINE FRIEND REQUEST"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>