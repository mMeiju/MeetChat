<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 android:fitsSystemWindows="true"
                                                 android:background="@drawable/bg_gradient"
                                                 tools:context="com.example.meiju.meetchat.ui.FormActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:id="@+id/message_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            tools:text="Fill follow forms and register your information."/>

        <EditText
            android:id="@+id/email_form_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/message_text_view"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:hint="EMAIL"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"/>

        <EditText
            android:id="@+id/password_form_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_form_edit_text"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            android:hint="PASSWORD"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"/>

        <Button
            android:id="@+id/sign_up_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_frame"
            android:text="SIGN UP"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:layout_alignBaseline="@+id/sign_in_button"
            android:layout_alignBottom="@+id/sign_in_button"
            android:layout_alignEnd="@+id/password_form_edit_text"/>

        <Button
            android:id="@+id/sign_in_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_frame"
            android:text="SIGN IN"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:layout_below="@+id/password_form_edit_text"
            android:layout_alignStart="@+id/password_form_edit_text"/>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>